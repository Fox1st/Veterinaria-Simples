@{
    ViewData["Title"] = "Agendamento";
}

@model Agendamento

<h1 class="margin">Pr√©-Agendamento</h1>

<form method="POST">
    <p>
        <label asp-for="Nome" class="margin">Nome:</label>
        <input asp-for="Nome"/>
    </p>
    <p>
        <label asp-for="Telefone" class="margin">Telefone:</label>
        <input asp-for="Telefone"/>
    </p>
    <p>
        <label asp-for="Data" class="margin">Data:</label>
        <input asp-for="Data"/>
    </p>
    <p>
        <label asp-for="Animal" class="margin">Animal:</label>
        <select asp-for="Animal">
            <option value="Gato">Gato</option>
            <option value="Cachorro">Cachorro</option>
        </select>
    </p>
    <p>
        <label asp-for="Necessidade" class="margin">Necessidade:</label>
        <input asp-for="Necessidade"/>
    </p>
    <input type="submit" value="Enviar" class="margin"/>
</form>